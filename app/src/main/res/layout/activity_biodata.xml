<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EFE7E7"
    tools:context=".BiodataActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@drawable/top">
        <TextView
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textStyle="normal"
            android:textColor="#ffffff"
            android:layout_marginTop="12dp"
            android:text="Biodata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <ImageView
            android:layout_gravity="center"
            android:background="@drawable/fp"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:text="Nama"
                android:textColor="#333"
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#333"
                android:id="@+id/namaTxt"
                android:text="nama"
                android:layout_marginLeft="76dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:text="Jenis Kelamin"
                android:textColor="#333"
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#333"
                android:layout_marginLeft="25dp"
                android:id="@+id/jkTxt"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:text="Umur"
                android:textColor="#333"
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#333"
                android:id="@+id/umurTxt"
                android:layout_marginLeft="80dp"
                android:text="17thn"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:text="Email"
                android:textColor="#333"
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#333"
                android:id="@+id/emailTxt"
                android:layout_marginLeft="80dp"
                android:text="irvanngalam32@gmail.com"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:text="Telp"
                android:textColor="#333"
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#333"
                android:id="@+id/telpTxt"
                android:text="089793203427"
                android:layout_marginLeft="86dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:text="Alamat"
                android:textColor="#333"
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#333"
                android:id="@+id/alamatTxt"
                android:text="alamat"
                android:layout_marginLeft="68dp"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <Button
                android:id="@+id/edit"
                android:text="Edit"
                android:textColor="#fff"
                android:background="@drawable/button"
                android:layout_width="150dp"
                android:layout_marginLeft="20dp"
                android:layout_height="50dp"/>
            <Button
                android:id="@+id/about"
                android:text="About"
                android:textColor="#fff"
                android:background="@drawable/button"
                android:layout_width="150dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp"
                android:layout_height="50dp"/>
        </LinearLayout>
        <Button
        android:id="@+id/dial"
        android:text="Dial"
        android:textColor="#fff"
        android:background="@drawable/button"
        android:layout_width="150dp"
        android:layout_gravity="center"
            android:layout_marginTop="10dp"
        android:layout_height="50dp"/>
    </LinearLayout>
</LinearLayout>